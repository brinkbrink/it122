  <body>
    <div id="root"></div>
    <script type="text/babel">
    
    const divStyle = {
    color: 'red'
    };


    const greeting = <h1 className="hello">HEY BUDDY WHAT UP</h1>;
    const tapes = <%- tapes %>;
        console.log(tapes);
    const tapesList = tapes.map((tape) => <li key={tape.artist}><a href={tape.artist}>{tape.artist}</a></li>)
      console.log(tapesList);

