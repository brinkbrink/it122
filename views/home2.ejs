    const MyApp = (props) => {
        if (props.user) {
            return <span><h1 style={divStyle}>Hello, {props.user}!</h1>{tapesList}</span>;
       
        }
        return greeting;
        }
        

    const container = document.getElementById('root');
    const root = ReactDOM.createRoot(container);
    root.render(<MyApp user="DUMMMY"/>);

